{
  "name": "chromebook-unlocked-games",
  "version": "2.1.0",
  "description": "Static site generator for hosting unblocked browser games on GitHub Pages",
  "scripts": {
    "build": "node generate.js",
    "validate": "node scripts/validate-games.js",
    "sync-data": "node scripts/update-data.js",
    "cleanup": "node scripts/cleanup-orphaned-pages.js",
    "merge-html": "node scripts/merge-split-html.js",
    "update-all": "npm run merge-html && npm run sync-data && npm run cleanup && npm run validate && npm run build",
    "clean": "rm -rf dist/",
    "prebuild": "npm run validate",
    "dev": "npm run build && npx serve dist -p 3000",
    "lint": "eslint generate.js scripts/*.js src/**/*.js",
    "format": "prettier --write '**/*.{js,json,md}' '!dist/**' '!node_modules/**'",
    "format:check": "prettier --check '**/*.{js,json,md}' '!dist/**' '!node_modules/**'"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.1"
  },
  "keywords": [
    "games",
    "unblocked",
    "chromebook",
    "school-games",
    "browser-games",
    "static-site"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chromebookunlocked/chromebookunlocked.github.io.git"
  },
  "author": "Chromebook Unlocked Games Team",
  "license": "MIT"
}
